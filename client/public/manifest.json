
{
  "manifest_version": 3,
  "name": "GuardVision PRO - AI PII Redactor",
  "version": "1.5.0",
  "description": "AI-powered PII detection and redaction directly in your browser.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "sidePanel",
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
